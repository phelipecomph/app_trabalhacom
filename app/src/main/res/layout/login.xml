<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5D5"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="221dp"
        app:srcCompat="@drawable/_0210116_220441_0000" />

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="30dp" >

        <TextView
            android:id="@+id/titleEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="28dp"
            android:paddingTop="60dp"
            android:text="Email"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/inputEmail"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#FB5C1D"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:paddingTop="72dp"
            android:singleLine="true"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/titlePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="28dp"
            android:paddingTop="130dp"
            android:text="Senha"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/inputPassword"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#FB5C1D"
            android:ems="10"
            android:inputType="textPassword"
            android:paddingTop="142dp"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#FCBF49"
            android:insetTop="200dp"
            android:paddingLeft="50dp"
            android:paddingTop="6dp"
            android:paddingRight="50dp"
            android:text="Login"
            android:textColor="#121212" />

        <TextView
            android:id="@+id/cadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="250dp"
            android:text="Ainda nÃ£o tem uma conta? Cadastre-se"
            android:textColor="#000000"
            android:textColorLink="#000000"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/FacebookButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="300dp"
            android:background="#FFFFFF"
            app:srcCompat="@drawable/facebook" />

        <ImageButton
            android:id="@+id/googleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="300dp"
            android:background="#FFFFFF"
            app:srcCompat="@drawable/google" />

    </androidx.cardview.widget.CardView>

</LinearLayout>